.container{:style => "background-color: #e9e9e9; height: 100%"}
  %h2= I18n.t "views.playlists.lists"
  = will_paginate
  %table{:cellspacing => '0', :width => '100%'}
    %thead
      %th= I18n.t "global.show"
      %th= I18n.t "global.edit"
      %th= I18n.t "global.delete"
      %th= I18n.t "views.playlists.add"
    %tbody
      - @playlists.each do |playlist|
        - if current_user?(playlist.user)
          %tr
            %td
              = link_to playlist.name, playlist_path(playlist)
            %td
              %a.btn.btn-default{:href => edit_playlist_path(playlist)}
                %span.glyphicon.glyphicon-pencil>
                = I18n.t 'global.edit'
            %td
              %a.btn.btn-default{:href => playlist_path(playlist), method: :delete, data: { confirm: I18n.t('global.are_sure') }}
                %span.glyphicon.glyphicon-trash
                = I18n.t 'global.delete'
            %td
              %a.btn.btn-default{:href => songs_path}
                %span.glyphicon.glyphicon-plus
                = I18n.t 'views.playlists.add'
  = will_paginate