%h1= I18n.t 'views.songs.upload_new_MP3'
= form_for @song do |f|
  = f.label I18n.t 'views.songs.title'
  %br/
  = f.text_field :title
  %br/
  = f.label I18n.t 'views.songs.artist'
  %br/
  = f.text_field :artist
  %br/
  = f.label I18n.t 'views.songs.year'
  %br/
  = f.text_field :year
  %br/
  = f.label I18n.t 'views.songs.genre'
  %br/
  = f.text_field :genre
  %br/
  = f.label I18n.t 'views.songs.album'
  %br/
  = f.text_field :album
  %br/
  = f.label I18n.t 'views.songs.track_nr'
  %br/
  = f.text_field :track_nr
  %br/
  %br/

  = f.submit I18n.t 'views.songs.upload'
