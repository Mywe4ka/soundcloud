.container
  .row
    .col-xs-9.col-md-6
      %br/
      = image_tag @user.photo.url(:thumb)
      %br/
      %h2= @user.name

      - if signed_in?
        = render 'follow_form'
        %br/
        = render 'stats'
        %br/

      - if @user == current_user
        = link_to I18n.t('views.users.edit_profile'), edit_user_path(@user)
        %br/
        %br/
        = render 'songs/upload'
    .col-xs-9.col-md-6
      %br/
      - @playlists.each do |playlist|
        - if current_user?(playlist.user)
          %tr
            %td= link_to playlist.name, playlist_path(playlist)
            %td= link_to I18n.t('global.edit'), edit_playlist_path(playlist)
            %td= link_to I18n.t('global.delete'), playlist_path(playlist), method: :delete, data: { confirm: I18n.t('global.are_sure') }
            %td= link_to "<button>Add</button>".html_safe, add_song_playlists_path(:id => playlist, :song_id => @song)




